dont use this is a testing link is just for us to test buttons


<button id="allowedBtn" style="display:none;">Allowed Devices Button</button>

<script>
  const btn = document.getElementById('allowedBtn');
  const ua = navigator.userAgent.toLowerCase();

  const isWindows = ua.includes('windows');
  const isLinux = ua.includes('linux');
  const isMac = ua.includes('macintosh') || ua.includes('mac os');
  const isAndroid = ua.includes('android');
  const isIOS = /iphone|ipad|ipod/.test(ua);

  if (isWindows || isLinux || isMac || isAndroid || isIOS) {
    btn.style.display = 'inline-block';
  }
</script>
