{
  "krynet_api": {
    "base_url": "https://krynet.ai/api/",
    "authentication": {
      "required": true,
      "method": "Bearer Token",
      "mfa_required": true,
      "mfa_methods": ["TOTP", "SMS", "Email"]
    },
    "endpoints": {
      "accounts": {
        "create_account": {
          "method": "POST",
          "path": "/accounts",
          "description": "Create a new Krynet account",
          "body": {
            "username": "exampleUser123",
            "email": "user@example.com",
            "password": "superSecurePassword!",
            "mfa_setup": {
              "enabled": true,
              "method": "TOTP"
            }
          },
          "response": {
            "account_id": "abc123xyz",
            "mfa_enabled": true,
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        },
        "login": {
          "method": "POST",
          "path": "/accounts/login",
          "description": "Login with username/email and password, requires MFA",
          "body": {
            "username_or_email": "exampleUser123",
            "password": "superSecurePassword!",
            "mfa_code": "123456"
          },
          "response": {
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
            "refresh_token": "dGhpc0lzQXJlZnJlc2hUb2tlbg==",
            "mfa_required": true
          }
        },
        "refresh_token": {
          "method": "POST",
          "path": "/accounts/token/refresh",
          "description": "Refresh auth token",
          "body": {
            "refresh_token": "dGhpc0lzQXJlZnJlc2hUb2tlbg=="
          },
          "response": {
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        },
        "get_profile": {
          "method": "GET",
          "path": "/accounts/me",
          "description": "Get current user profile",
          "response": {
            "account_id": "abc123xyz",
            "username": "exampleUser123",
            "email": "user@example.com",
            "mfa_enabled": true
          }
        }
      },
      "messaging": {
        "send_message": {
          "method": "POST",
          "path": "/messages/send",
          "description": "Send a message to a user or channel",
          "body": {
            "target_id": "channel789",
            "type": "text",
            "content": "Hey, this is a test message!",
            "attachments": []
          },
          "response": {
            "message_id": "msg456def",
            "timestamp": "2025-06-28T02:00:00Z"
          }
        },
        "get_messages": {
          "method": "GET",
          "path": "/messages/channel789",
          "description": "Get messages from a user or channel",
          "query_params": {
            "limit": 50,
            "before": "2025-06-28T00:00:00Z",
            "after": "2025-06-27T00:00:00Z"
          },
          "response": {
            "messages": [
              {
                "message_id": "msg123abc",
                "sender_id": "user456",
                "type": "text",
                "content": "Hello, world!",
                "attachments": [],
                "timestamp": "2025-06-27T23:59:59Z"
              }
            ]
          }
        }
      }
    }
  }
}
